<h1>My Movie Lists</h1>

<ul>
  <% @lists.each do |list| %>
    <h2><%= link_to list.name, list_path(list) %></h2>
    <p><%= link_to 'Delete', list_path(list), method: :delete, data:
    { confirm: "Are you sure you want to delete list?" }%></p>
  <% end %>
</ul>

<%= simple_form_for [ @list ] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.submit "Create list", class: "btn btn-primary" %>
<% end %>
